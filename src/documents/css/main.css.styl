/* Styles for flushing the footer to the bottom of the screen,
 * in case the page's content is shorter than the browser window
 */
html, body {
    height: 100%;
}

.page-wrapper {
    min-height: 100%;
    position: relative;
}

.page-content {
    overflow: auto;
    padding-bottom: footer-height;
}

footer {
    position: relative;
    margin-top: -(footer-height);
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Conv_PressStart2P', Lucida Console, monospace;
}

/* We have two content widths:
 *   fullwidth (800px) stretches the entire width of our center column, or the entire width of a phone's screen
 *     Use .fullwidth-container
 *   inset (764px) has padding on both sides of the center column / small screen
 *     Use Bootstrap's normal .container
 */
.fullwidth-container {
    width: 800px;
    margin-left: auto;
    margin-right: auto;
}

@media (max-width: 800px) {
    .fullwidth-container {
        width: auto;
    }

    /* We've moved the padding from body onto .container */
    .container {
        margin-left: 18px;
        margin-right: 18px;
    }
}

.center-column {
    background: center-column-background-color;
}

/* When the screen is wide enough, our logo header should set its own height.
 * This prevents the page from jumping downwards once the image loads.
 */
@media (min-width: 800px) {
    .logo-full {
        height: 232px;
        display: block;
    }
}

/* For that retro look, the background is a vertical gradient but with only a
 * handful of distinct colors.  It's created by styling a handful of background divs,
 * cuz I'm bein' pragmatic "like a BOSS!"
 */

.background-container {
    z-index -1
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

if render-striped-background

    stripe-darken-factor = 4%
    stripe-count = 14

    // function to compute a stripe's height
    stripe-height-function(index) {
        30px + (10px * index)
    }

    // function to compute a stripe's color
    stripe-color-function(index) {
        darken(page-background-color, stripe-darken-factor * (index - 1))
    }

    // Function to generate styles for a single stripe
    background-stripe(index, isLast) {
        .background-stripe{index} {
            background: stripe-color-function(index);
            if isLast {
                height: 9999px;
            } else {
                height: stripe-height-function(index);
            }
        }
    }

    [class*="background-stripe"] {
        z-index: -1;
    }
    .background-header {
        background: url(../img/logorepeat.png);
        background-size: auto, 100%;
        background-repeat: repeat-x;
        background-position: 0 -152px, 0 80px;
        height: 80px;
    }
    #home .background-header {
        background-position: 0 0, 0 232px;
        height: 232px;
    }

    for i in 1...stripe-count
        background-stripe(i, false)
    background-stripe(stripe-count, true)

// These elements sit in the background and have the same color as our center column's background,
// giving the effect that it extends to the bottom of the page.
.extend-center-column-outer {
    position: absolute;
    height: 100%;
    width: 100%;
}
.extend-center-column-inner {
    width: 800px;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
    background: center-column-background-color;
}
